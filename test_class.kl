import "io"

class Base {
  name = "Base"

  func hello() string {
    name
  }
}

class Sub extends Base {
  name = "Sub"

  func subhello() {
    io.println(name)
    io.println(super.name)
  }
}

sub := new Sub()
sub.name
sub.hello()
sub.subhello()

